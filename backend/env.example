# Security
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DJANGO_DEBUG=true
# Allow LAN access: set to true to enable access from any IP in local network
# When enabled, ALLOWED_HOSTS, CSRF_TRUSTED_ORIGINS, and CORS will allow all hosts
DJANGO_ALLOW_LAN_ACCESS=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://localhost:3000

# Database (PostgreSQL for Docker)
# Variables for docker-compose.yml
DB_NAME=codeyard_db
DB_USER=codeyard_user
DB_PASSWORD=codeyard_password

# Django database settings
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=codeyard_db
DJANGO_DB_USER=codeyard_user
DJANGO_DB_PASSWORD=codeyard_password
DJANGO_DB_HOST=db
DJANGO_DB_PORT=5432

# Cache (Redis for Docker)
DJANGO_CACHE_BACKEND=django_redis.cache.RedisCache
DJANGO_CACHE_LOCATION=redis://redis:6379/1

# Security Cookies
DJANGO_SECURE_COOKIES=false
DJANGO_REFRESH_COOKIE_SAMESITE=Lax

# CORS
# In LAN mode (DJANGO_ALLOW_LAN_ACCESS=true), all origins are allowed
# Otherwise, specify allowed origins here
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

