# Security
DJANGO_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (PostgreSQL for Docker)
# Variables for docker-compose.yml
DB_NAME=codeyard_db
DB_USER=codeyard_user
DB_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD

# Django database settings
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=codeyard_db
DJANGO_DB_USER=codeyard_user
DJANGO_DB_PASSWORD=CHANGE-THIS-TO-A-SECURE-PASSWORD
DJANGO_DB_HOST=db
DJANGO_DB_PORT=5432

# Cache (Redis for Docker)
DJANGO_CACHE_BACKEND=django_redis.cache.RedisCache
DJANGO_CACHE_LOCATION=redis://redis:6379/1

# Security Cookies (Production)
DJANGO_SECURE_COOKIES=true
DJANGO_REFRESH_COOKIE_SAMESITE=Strict

# CORS (Production)
DJANGO_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

